{{!-- This main layout wraps both the Explorer SPA and the Editor SPA. --}}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Wikilogic</title>
    <link rel="stylesheet" type="text/css" href="styles/main.css">
    <link href='http://fonts.googleapis.com/css?family=Roboto:100,300,700' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    {{#unless loggedIn}}
		<!-- when not logged in, load this stylesheet to grey out areas that won't work -->
		<link rel="stylesheet" type="text/css" href="styles/greyRestricted.css">
    {{/unless}}
</head>
<body ng-app>
	
	<div class="mini-header">
		<a class="mini-header__logo" href="/">
			<img src="/images/logo.svg" alt="WikiLogic Logo" width="50">
		</a> 
		<input class="mini-header__search" type="text">
	</div>

	<div class="sidebar">
		{{!--#loggedIn--}}
			<div class="nav-appToggle">
				<a href="/profile" class="btn">Profile</a>
				<a href="/explorer" class="btn">Explorer</a> 
				<a href="/editor" class="btn">Editor</a>
			</div>
		{{!--/loggedIn--}}
		<div class="sidebar__body">

			<!-- Shows when user is in Explorer app -->
			<div class="explorer-nav">
				<div class="nav-sidebar">
					<a href="#">Recent</a>
					<a href="#">Popular</a>
					<a href="#">Influential</a>
					<a href="#">Changing</a>
					<a href="#">Random</a>
				</div>
				{{!--#loggedIn--}}
					<div class="nav-sidebar">
						<a href="#">History</a>
						<a href="#">Collections</a>
						<a href="#">Watching</a>
					</div>
				{{!--/loggedIn--}}	
			</div>
			
			<!-- Shows when user is in Editor app -->
			<div class="editor-nav">
			{{!--#if loggedIn--}}
				<!-- normal editor controls -->
				<div class="nav-sidebar">
					<a href="#">Published</a>
					<a href="#">Draft statements(0)</a>
				</div>
			{{!--else--}}
				<!-- show a preview -->
				<p>You need to signup / login to access this section</p>
			{{!--/if--}}	
			</div>

		</div>

		<div class="sidebar__footer">
			{{#if loggedIn}}
				<a href="/logout" class="btn">Logout</a>
			{{else}}
				<a href="#" class="btn">Signup</a>
				<p>or <a href="#">Login</a> if you have an account.</p>
			{{/if}}
			<a href="#">Blog</a>,
			<a href="#">Developers</a>,
			<a href="#">Manual/help</a>
		</div>	

	</div>

 	<div class="main">
    	{{{body}}}
    </div>
 

</body>
</html>